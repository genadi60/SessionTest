@model SessionTest.InputModels.PackageInputModel
@{
    ViewData["Title"] = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var paymentMethods = ViewData["Methods"] as IEnumerable<SelectListItem>;

    var shipping = Model.ShippingData;

}

<h1 class="text-center">@ViewData["Title"]</h1>

<h6 class="text-center">Check Your shipping data</h6>
<h6 class="text-center">and</h6>
<h6 class="text-center">confirm Your payment method.</h6>
<div class="container w-50">
    <hr />
    <form asp-action="Index" asp-controller="Package" method="post">
        <div class="form-group form-inline">
            <label asp-for="ShippingData.Country" class="font-weight-bold col-6">Country</label>
            <input asp-for="ShippingData.Country" value="@Model.ShippingData.Country" class="form-control text-center col-6" />
        </div>
        <div class="form-group form-inline">
            <label asp-for="ShippingData.City" class="font-weight-bold col-6">City</label>
            <input asp-for="ShippingData.City" value="@Model.ShippingData.City" class="form-control text-center col-6" />
        </div>
        <div class="form-group form-inline">
            <label asp-for="ShippingData.Address" class="font-weight-bold col-6">Address</label>
            <input asp-for="ShippingData.Address" value="@Model.ShippingData.Address" class="form-control text-center col-6" />
        </div>
        <div class="form-group form-inline">
            <label asp-for="ShippingData.Email" class="font-weight-bold col-6">Email</label>
            <input asp-for="ShippingData.Email" value="@Model.ShippingData.Email" class="form-control text-center col-6" />
        </div>
        <div class="form-group form-inline">
            <label asp-for="ShippingData.Name" class="font-weight-bold col-6">Name</label>
            <input asp-for="ShippingData.Name" value="@Model.ShippingData.Name" class="form-control text-center col-6" />
        </div>
        <div class="form-group form-inline">
            <label asp-for="ShippingData.LastName" class="font-weight-bold col-6">Last name</label>
            <input asp-for="ShippingData.LastName" value="@Model.ShippingData.LastName" class="form-control text-center col-6" />
        </div>
        <hr />
        <div class="form-group form-inline">
            <label asp-for="Amount" class="font-weight-bold col-6">Amount</label>
            <input asp-for="Amount" value="@Model.Amount" class="form-control text-center col-6" />
        </div>
        <hr />
        <div class="form-group form-inline">
            <label asp-for="PaymentMethod" class="font-weight-bold col-6">Payment method</label>
            <select asp-items="paymentMethods" asp-for="PaymentMethod" class="form-control col-6"></select>
            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
        </div>
        <div class="form-group d-flex justify-content-around">
            <a class="btn btn-dark" href="javascript:history.back()" role="button">Back</a>
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
        @*<div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Submit</button>
        </div>*@
        <input type="hidden" asp-for="CartId" value="@Model.CartId" />
        <input type="hidden" asp-for="ShippingData.CartId" value="@Model.ShippingData.CartId" />
    </form>
    <hr />
</div>
