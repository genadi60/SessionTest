@model SessionTest.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Order details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<title>@ViewData["Title"]</title>

<div class="jumbotron jumbotron-fluid">
    <h3 class="display-4 text-center">@ViewData["Title"]</h3>
    <hr/>
    <div>
        <dl class="dl-horizontal text-center">
            <dt>
                @Html.DisplayNameFor(model => model.Product.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Product.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Product.Price)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Product.Price)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Total)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Total)
            </dd>
        </dl>
        <hr/>
        <div class="d-flex justify-content-around">
            <a class="btn btn-dark" href="javascript:history.back()" role="button">Back</a>
            <form method="post" asp-action="Details" asp-controller="Product" asp-route-id="@Model.ProductId">
                <button type="submit" class="btn btn-dark btn-sm mb-1">Details</button>
            </form>
        </div>
        
    </div>
</div>
